    "symbols": {
        "AccessModifier": {
            "choices": [
                {
                    "choice": "public",
                    "description": "Set construct access public"
                },
                {
                    "choice": "protected",
                    "description": "Set construct access protected"
                },
                {
                    "choice": "internal",
                    "description": "Set construct access internal"
                },
                {
                    "choice": "protectedinternal",
                    "description": "Set construct access protectedinternal"
                },
                {
                    "choice": "privateprotected",
                    "description": "Set construct access privateprotected"
                }
            ],
            "datatype": "choice",
            "defaultValue": "internal",
            "description": "Select the access modifier for the selected file construct [public, protected, internal, protectedinternal, privateprotected]",
            "type": "parameter"
        },
        "FileConstruct": {
            "choices": [
                {
                    "choice": "class",
                    "description": "Create a class file"
                },
                {
                    "choice": "struct",
                    "description": "Create a struct file"
                },
                {
                    "choice": "enum",
                    "description": "Create an enum file"
                },
                {
                    "choice": "abstract",
                    "description": "Create an abstract class file"
                },
                {
                    "choice": "interface",
                    "description": "Create an interface file"
                }
            ],
            "datatype": "choice",
            "defaultValue": "class",
            "description": "Select the file construct [class, abstract, interface, enum, struct]",
            "type": "parameter"
        },
        "InternalAbstractClass": {
            "type": "computed",
            "value": "(ConstructAccessModifier == \"internal\" && FileType == \"abstract\")"
