<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Title>Basic Templates</Title>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageType>Template</PackageType>
        <VersionPrefix>0.2.0</VersionPrefix>
        <PackageId>BasicTemplates</PackageId>
        <Authors>Nathan D. Jent</Authors>
        <Description>Basic file templates to use when creating an application.</Description>
        <PackageTags>dotnet-new;templates</PackageTags>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <RepositoryUrl>https://github.com/nathanjent/BasicTemplates</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="templates\**\*" Exclude="templates\**\bin\**;templates\**\obj\**" />
        <Compile Remove="**\*" />
    </ItemGroup>

</Project>
